{
  "expo": {
    "name": "Hermitcraft-TCG",
    "slug": "hermitcraft-tcg",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "myapp",
    "platforms": ["android", "ios"],
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#36a9ae"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hermitcraft.tcg"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#a7a0a0"
      },
      "icon": "./assets/icon.png",
      "package": "com.hermitcraft.tcg"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "plugins":  [
      [
        "expo-build-properties",
        { "ios": { "useFrameworks": "static" } }
      ]
    ]
  }
}
